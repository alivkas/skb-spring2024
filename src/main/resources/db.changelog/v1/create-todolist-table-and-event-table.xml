<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-todolist-table-and-event-table" author="ElovskikhMM">

        <createSequence sequenceName="hibernate_sequence" incrementBy="1"/>
        
        <createTable tableName="todo_list">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="todo_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createTable tableName="event">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>

            <column name="event_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="todo_list_id" type="BIGINT">
                <constraints foreignKeyName="event_id_todo_list_id"
                             referencedTableName="todo_list"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>